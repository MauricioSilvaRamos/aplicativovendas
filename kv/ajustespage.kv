<AjustesPage>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao_fino.png'
            pos_hint: {'right': 0.85, 'top': 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: 'Seu ID Único: 1'
            id: id_vendedor

        # Perfil
        ImageButton:
            pos_hint: {'right': 0.5, 'top': 0.7}
            size_hint: 0.5, 0.15
            source: 'icones/foto_perfil.png'
            on_release: app.mudar_tela('fotoperfilpage')
        LabelButton:
            pos_hint: {'right': 0.9, 'top': 0.7}
            size_hint: 0.5, 0.15
            text: 'Mudar Foto de Perfil'
            on_release: app.mudar_tela('fotoperfilpage')

        # Acompanhar Vendedor
        ImageButton:
            pos_hint: {'right': 0.5, 'top': 0.5}
            size_hint: 0.5, 0.15
            source: 'icones/adicionar_vendedor.png'
            on_release: app.mudar_tela('adicionarvendedorespage')
        LabelButton:
            pos_hint: {'right': 0.9, 'top': 0.5}
            size_hint: 0.5, 0.15
            text: 'Acompanhar Vendedor'
            on_release: app.mudar_tela('adicionarvendedorespage')

        # Todas as Vendas da Empresa
        ImageButton:
            pos_hint: {'right': 0.5, 'top': 0.3}
            size_hint: 0.5, 0.15
            source: 'icones/vendas_empresa.png'
            on_release: app.todas_vendas_empresa()
        LabelButton:
            pos_hint: {'right': 0.9, 'top': 0.3}
            size_hint: 0.5, 0.15
            text: 'Ver Todas as Vendas'
            on_release: app.todas_vendas_empresa()

        # Botão Voltar Para HomePage
        FloatLayout:
            pos_hint: {'right': 1,'top': 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.90}
                size_hint: 0.2, 0.80
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('homepage')